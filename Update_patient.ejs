			<option value="Uttarakhand">Uttarakhand</option>
			<option value="West Bengal">West Bengal</option>
			</select><br><br> 
			<label for="city">City</label> 
			<input type="text" id="city" name="city" style="float: right" value="<%=result.city%>"><br><br>
				<label id="note" class="lb"><sup class="star">*</sup>-mandatory</label><br><br>
			<button type="submit" class=" button2">Update</button><br>
			
		</form>
