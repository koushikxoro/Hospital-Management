	<body>
		<header>
			<h1>ABC Hospital Management System</h1>
			<select name="patient" class="dropdown"  onchange="location = this.value;">
                <option value="patients">Patients</option>
				<option value="/patientsregistration">patients registration</option>
				<option value="/Update_patient">update patients</option>
				<option value="/Deletepatients">Delete patients</option>
				<option value="/viewpatients">view patients</option>
				<option value="/searchpatients">search patients</option>
				<option value="/patientsbilling">patients billing</option>	
            </select>&nbsp;&nbsp;
			<select name="pharmacy" class="dropdown" onchange="location = this.value;"> 
				<option value="Pharmacy">Pharmacy</option>
				<option value="/searchpatients">Get patient details</option>
				<option value="/Issuemedicine">Issue medicine</option>
			</select>&nbsp;&nbsp;
			<select name="diagnostics" class="dropdown" onchange="location = this.value;">
				<option value="Diagnostics">Diagnostics</option>
				<option value="/searchpatients">Get patient details</option>
				<option value="/diagonstic">diagonstic</option>
			</select>&nbsp;&nbsp;
			<br><br><br>
		</header>
		<br>
		<div class="container a" style="background-color: blue;">
			<div class="row a">
				<div class="col-lg-12 a" style="text-align: center;">
		<form action="/pid" method="post" >
			<h2 style="text-align: center"> Update patient </h2>
			
			<label for="pid">Patient Id<sup class="star">*</sup></label>
			<input type="text" id="pid" name="pid"  value="<%=result.pid%>" required> 
			<input class="button1" type="submit" value="GET"><br><br>
			
		</form>
				</div>
		<div class="col-lg-12 a" style="text-align: center;">
		<form action="/update" method="post" >
			


			<label for="pname">Patient Name</label> 
			<input type="text" id="pname" name="pname" style="float: right" value="<%=result.pname%>" ><br><br>
			<label for="page">Patient Age</label>
			<input type="text" id="page" name="page"style="float: right" value="<%=result.p_age%>"><br><br>
			<label for="dateofadd">Date of addmission</label> 
			<input type="date" id="dateofadd" name="dateofadd"style="float: right" value="<%=result.date%>"><br><br>

			<label for="beds">Type of bed</label>
			<select name="beds" id="beds" style="float: right" value="<%=result.bed%>">
			<option value="Select">Select</option>
			<option value="singleICU">Single ICU</option>
			<option value="doubleICU">Double ICU</option>
			<option value="general">Genral Ward</option>
			</select><br><br>
			<label for="Address" >Address</label>
			<input type="text" id="Address" name="Address"style="float: right" value="<%=result.address%>"><br><br>
			<label for="state">State</label>
			<select name="state" id="state" style="float: right" value="<%=result.state%>">
			<option value="">Select State</option>
			<option value="Andaman and Nicobar Islands ">Andaman and Nicobar Islands </option>
			<option value="Andhra Pradesh">Andhra Pradesh</option>
			<option value="Assam">Assam</option>
			<option value="Bihar">Bihar</option>
			<option value="Chandigarh ">Chandigarh</option>
			<option value="Chhattisgarh">Chhattisgarh</option>
			<option value="Dadra and Nagar Haveli and Daman and Diu">Dadra and Nagar Haveli and Daman and Diu</option>
			<option value="Delhi">Delhi</option>
			<option value="Goa">Goa</option>
			<option value="Gujarat">Gujarat</option>
			<option value="Haryana">Haryana</option>
			<option value="Himachal Pradesh">Himachal Pradesh</option>
			<option value="Jammu and Kashmir">Jammu and Kashmir</option>
			<option value="Jharkhand">Jharkhand</option>
			<option value="Karnataka">Karnataka</option>
			<option value="Kerala">Kerala</option>
			<option value="Ladakh">Ladakh</option>
			<option value="Lakshadweep">Lakshadweep</option>
			<option value="Madhya Pradesh">Madhya Pradesh</option>
			<option value="Maharashtra">Maharashtra</option>
			<option value="Manipur">Manipur</option>
			<option value="Meghalaya">Meghalaya</option>
			<option value="Mizoram">Mizoram</option>
			<option value="Nagaland">Nagaland</option>
			<option value="Odisha">Odisha</option>
			<option value="Puducherry">Puducherry </option>
			<option value="Punjab">Punjab</option>
			<option value="Rajasthan">Rajasthan</option>
			<option value="Sikkim">Sikkim</option>
			<option value="Tamil Nadu">Tamil Nadu</option>
			<option value="Telangana">Telangana</option>
			<option value="Tripura">Tripura</option>
